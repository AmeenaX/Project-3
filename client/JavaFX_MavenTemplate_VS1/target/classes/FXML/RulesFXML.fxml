<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="border"
			fx:id = "root">
    
    <top>
        <VBox alignment = "CENTER">
            <Label fx:id = "rulesLabel" text = "How to Play"/>
        </VBox>
    </top>

    <center><VBox styleClass = "vBox" alignment = "CENTER" BorderPane.alignment = "CENTER" spacing = "10">
        <Label fx:id = "one" text = "- Place an ante wager of $5 to $25 inclusive."/>
        <Label fx:id = "two" text = "(*OPTIONAL: Place a pair plus wager of $5 to $25 inclusive)"/>
        <Label fx:id = "three" text = "(*NOTE: a pair plus wager can be made instead of or alongside ante wager)"/>
        <Label fx:id = "four" text = "- Each player receieves three cards, with user's cards being face up"/>
        <Label fx:id = "five" text = "- Play or fold. (*NOTE: folding means losing whatever ante wager or pair plus wager was made)"/>
        <Label fx:id = "six" text = "- To continue, make a play wager equal to ante wager amount"/>
        <Label fx:id = "seven" text = "- Dealer's cards are shown."/>
        <Label fx:id = "eight" text = "(*NOTE: If the dealer doesn't have a Queen high or better, the player wager is returned"/>
        <Label fx:id = "nine" text = "to players who didn't fold and ante bet is pushed to next hand. "/>
        <Label fx:id = "ten" text = "If the dealer wins, the player loses both ante and play wager."/>
        <Label fx:id = "eleven" text = "If player wins, they get paid out 1 to 1 (double wager)) "/>
    </VBox></center>
	
</BorderPane>